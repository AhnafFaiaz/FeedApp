@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <!-- Bootstrap CSS CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">

    <!-- Font Awesome CSS CDN -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />

    <!-- Our Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css">

    <!-- Scrollbar Custom CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/malihu-custom-scrollbar-plugin/3.1.5/jquery.mCustomScrollbar.min.css">

</head>
<body>
    <div class="wrapper">

        <!-- Sidebar  -->
        <nav id="sidebar">
            <div class="sidebar-header" style="background: cyan;">
                <h1 style="color: black;font-family: 'Permanent Marker', cursive;" ">FeedApp</h1>
            </div>

            <ul class="list-unstyled components">
                <li class="active">
                    <a href="/Dashboard/UserDashboard"><i class="fas fa-home"></i> Dashboard </a>
                </li>
                <li class="active">
                    <a href="/Problem/Create"><i class="fas fa-arrow-alt-circle-up"></i> Post Problem </a>
                </li>
             
                <li class="active">
                    <a href="/Problem/MyProblems"><i class="fa fa-eye"></i> My problems </a>
                </li>
            </ul>
            <br />
        </nav>
    </div>

    <!-- Page Content  -->
    <div id="content">
        <div class="menu-header">
            <button type="button" id="sidebarCollapse" class="btn menu-btn">
                <img src="~/images/nav.png" alt="Menu">
            </button>
            <div class="user-info-container">
                <div class="user-info">
                    @{
                        var userName = Context.Session.GetString("UserName");
                    }

                    @if (!string.IsNullOrEmpty(userName))
                    {
                        <h2>Welcome, @userName</h2>
                    }
                </div>
                <ul class="sidebar-logout">
                    
                     <a href="/Signin/Logout"><i class="fas fa-sign-out-alt"></i></a>
                </ul>
            </div>
            <br />
            <div class="container" style="padding-top:2%">
                @RenderBody()
            </div>
            @*<footer class="footer">
                <p>©2023 Ahnaf Faiaz. All rights reserved.</p>
            </footer>*@
        </div>
    </div>

    <!-- jQuery CDN -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    @*<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>*@

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>

    <!-- jQuery Custom Scroller CDN -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/malihu-custom-scrollbar-plugin/3.1.5/jquery.mCustomScrollbar.concat.min.js"></script>

   @* <script src="~/js/site.js"></script>*@
   @* <script>
        history.pushState(null, document.title, location.href);
        window.addEventListener('popstate', function (event) {
            window.location.href = "/Signin/Signin";
        });
    </script>*@

    @RenderSection("Scripts", false)
</body>
</html>
